 <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4 sidebar">


                <!-- Blog Search Well -->
                <div class="well">
                  <h4>Blog Search</h4>
                  <div class="input-group">
                    <%= form_tag("/articles", method: "get", class: "navbar-form", role: "search") do %>
                      <div class="form-group">
                        <%= text_field_tag(:q, nil, placeholder: "Search for an Article", class: "form-control") %>
                      </div>
                      <%= submit_tag("Search", type: "submit", class: "btn btn-default", id: "search-field") %>
                    <% end %>
                  </div>
                  <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li>
                                  <% @articles.each do |article| %>
                                    <%= raw(article.tag_list.map { |t| link_to t, tag_path(t) }.join(' ')) %>
                                  <% end %>

                                </li>
                                
                            </ul>
                        </div>
                        
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>Side Widget Well</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.</p>
               
                    
                </div>

            </div>